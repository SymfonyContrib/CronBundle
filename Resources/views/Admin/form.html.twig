{% extends "CronBundle::layout.html.twig" %}

{% block page_title %}{{ cron.id ? 'Update' : 'Create' }} cron{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form.group) }}
    {{ form_row(form.name) }}
    {{ form_row(form.desc) }}
    {{ form_row(form.job) }}
    {{ form_row(form.runInterval) }}
    {{ form_row(form.weight) }}
    {{ form_row(form.enabled) }}
    {{ form_widget(form.save) }}
    <a href="{{ cancel_url }}">Cancel</a>
    {{ form_end(form) }}
{% endblock %}
